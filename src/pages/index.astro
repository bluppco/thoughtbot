---

// RUNTIME
const runtime = Astro.locals.runtime

// API
import { homeAPI } from "@/api/home"

const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT,
    WEB_KEY_STAGING

} = runtime.env

const data = await homeAPI( ENVIRONMENT, WEB_KEY_STAGING, ENDPOINT )

const { home_data, case_studies, resources, meta_tags } = data

// IMPORTS ASTRO LAYOUTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS ASTRO COMPONENTS
import Home from "@/components/home/index.astro"

---
<Layout
    CDN={ CDN }
    description={ meta_tags.description }
    ENDPOINT={ ENDPOINT }
    image={ meta_tags.cover }
    PROJECT={ PROJECT }
    title={ meta_tags.title }
>
    <Home
        case_studies={ case_studies }
        CDN={ CDN }
        ENVIRONMENT={ ENVIRONMENT }
        home_data={ home_data }
        PROJECT={ PROJECT }
        resources={ resources }
    />
</Layout>
