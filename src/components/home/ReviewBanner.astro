---
// LAYOUTS
import Container from "../../layouts/Container.astro"

// ATOMS
import ArrowCTA from "../../atoms/ArrowCTA.astro"

// CONSTANTS
import { CDN_LINK, IMAGE_QUALITY, IMAGE_WIDTH } from "../../constants/cdn"

const { data } = Astro.props
---
<section class="bg-thoughtbot_lavender py-20 my-10 md:my-20">
    <Container>
        <div class="space-y-10">
            <div class="relative">
                <div class="w-8 md:w-10 aspect-square absolute -left-1 -top-10 md:-left-12 md:-top-10">
                    <img
                        src="/icons/double_quote.svg"
                        alt=""
                        class="w-full h-full"
                    />
                </div>
                <div class="md:pr-40">
                    <p class="text-thoughtbot_slate font-calibre font-medium text-2xl md:text-3xl leading-7">{ data.description }</p>
                </div>
            </div>
            <div class="md:flex justify-between items-center space-y-10 md:space-y-0">
                <div class="flex gap-4 items-center">
                    <div class="w-16 aspect-square rounded-full overflow-hidden">
                        <img
                            src={ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY + "&width=" + IMAGE_WIDTH }
                            alt=""
                            class="w-full h-full"
                        />
                    </div>
                    <div>
                        <p class="font-calibre font-medium text-thoughtbot_slate text-xl">{ data.title }</p>
                        <p class="font-calibre text-thoughtbot_slate text-xl">{ data.sub_title }</p>
                    </div>
                </div>
                <div>
                    <ArrowCTA>{ data.button_title }</ArrowCTA>
                </div>
            </div>
        </div>
    </Container>
</section>
