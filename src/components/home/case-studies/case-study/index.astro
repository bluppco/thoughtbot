---

// IMPORTS ASTRO ATOMS
import ArrowCTA from "@/atoms/buttons/arrow/index.astro"
import Link from "@/atoms/links/index.astro"
import Picture from "@/atoms/picture/index.astro"

const {

    alternative_text,
    CDN,
    cta,
    description,
    href,
    PROJECT,
    source,
    title

} = Astro.props

---
<div class="space-y-4 rounded overflow-hidden">
    <Link href={ href } aria_label={ title }>
        <div class="overflow-hidden w-full aspect-[3/2] bg-zinc-200">
            <Picture
                source={ source }
                alternative_text={ alternative_text }
                image_width="600"
                CDN={ CDN }
                PROJECT={ PROJECT }
            />
        </div>
    </Link>
    <div class="space-y-4 md:space-y-8">
        <div>
            <strong><span class="text-thoughtbot_slate text-xl font-calibre_semibold">{ title }</span></strong>
            <span> â€” </span>
            <span class="text-thoughtbot_slate text-2xl font-calibre">{ description }</span>
        </div>
        <Link href={ href } aria_label={ "Explore " + cta }>
            <ArrowCTA>{ cta }</ArrowCTA>
        </Link>
    </div>
</div>
