---
// LAYOUTS
import Container from "../../layouts/Container.astro"

// COMPONENTS
import ImageHeadingTitleDescriptionCTAAligned from "../common/ImageHeadingTitleDescriptionCTAAligned.astro"

const { data } = Astro.props
---
<Container>
    <section class="py-10 md:py-20">
        <ImageHeadingTitleDescriptionCTAAligned
            src={ data.cover }
            alt=""
            heading={ data.title }
            title={ data.sub_title }
            description={ data.description }
            cta={ data.button_title }
            cta_link={ data.button_link }
        />
    </section>
</Container>
