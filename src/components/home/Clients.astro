---
// LAYOUTS
import Container from "../../layouts/Container.astro"

// COMPONENTS
import ImageHeadingTitleDescriptionCTAAligned from "../ImageHeadingTitleDescriptionCTAAligned.astro"

const { data } = Astro.props
---
<Container>
    <section class="py-10 md:py-20">
        <ImageHeadingTitleDescriptionCTAAligned
            src={ data.cover }
            alt={ data.sub_title }
            heading={ data.title }
            title={ data.sub_title }
            description={ data.description }
            cta={ data.button_title }
            is_right={ true }
            height="aspect-square"
        />
    </section>
</Container>
