---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import ArrowCTA from "@/atoms/buttons/arrow/index.astro"
import Picture from "@/atoms/picture/index.astro"
import Link from "@/atoms/links/index.astro"

const { data } = Astro.props
---
<section class="bg-thoughtbot_lavender py-20 my-10 md:my-20">
    <Container>
        <div class="space-y-10">
            <div class="relative">
                <div class="w-8 md:w-10 aspect-square absolute -left-1 -top-10 md:-left-12 md:-top-10">
                    <img
                        src="/icons/double_quote.svg"
                        alt=""
                        class="w-full h-full"
                    />
                </div>
                <div class="md:pr-80">
                    <p class="text-thoughtbot_slate font-calibre_medium text-2xl md:text-4xl">{ data.description }</p>
                </div>
            </div>
            <div class="md:flex justify-between items-center space-y-10 md:space-y-0">
                <div class="flex gap-4 items-center">
                    <div class="w-16 aspect-square rounded-full overflow-hidden">
                        <Picture
                            src={ data.cover }
                            alt=""
                            image_width="800"
                        />
                    </div>
                    <div>
                        <p class="font-calibre_medium text-thoughtbot_slate text-xl">{ data.title }</p>
                        <p class="font-calibre text-thoughtbot_slate text-xl">{ data.sub_title }</p>
                    </div>
                </div>
                <Link href={ data.button_link } aria_label="">
                    <ArrowCTA>{ data.button_title }</ArrowCTA>
                </Link>
            </div>
        </div>
    </Container>
</section>
