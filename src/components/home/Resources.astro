---
// ATOMS
import H2 from "../../atoms/H2.astro"
import H4 from "../../atoms/H4.astro"

// COMPONENTS
import TitleDescriptionCTA from "../TitleDescriptionCTA.astro"
const { data } = Astro.props
---
<section class="space-y-10 py-10 md:py-20">
    <div class="space-y-4">
        <H2 uppercase={ true } tracking_wide={ true }>Resources for Entrepreneurs, Designers, and Developers</H2>
        <H4>Reap the rewards of everything weâ€™ve learned while building successful products</H4>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-16">
        {

            data.map( ( value ) => {

                return (
                    <TitleDescriptionCTA
                        title={ value.title }
                        description={ value.description }
                        cta={ value.button_title }
                    />
                )

            })

        }
    </div>
</section>
