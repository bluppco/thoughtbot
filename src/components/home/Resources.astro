---
// ATOMS
import HeadingTwo from "../../atoms/heading/Two.astro"
import HeadingTwoUppercase from "../../atoms/heading/TwoUppercase.astro"

// LAYOUTS
import Container from "../../layouts/Container.astro"

// COMPONENTS
import TitleDescriptionCTA from "../common/TitleDescriptionCTA.astro"

const { data, home } = Astro.props
---
<Container>
    <section class="space-y-10 py-10 md:py-20">
        <div class="space-y-4">
            <HeadingTwoUppercase>{ home.title }</HeadingTwoUppercase>
            <HeadingTwo>{ home.sub_title }</HeadingTwo>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-16">
            {

                data.map( ( value ) => {

                    return (
                        <TitleDescriptionCTA
                            title={ value.title }
                            description={ value.description }
                            cta={ value.button_title }
                            cta_link={ value.button_link }
                        />
                    )

                })

            }
        </div>
    </section>
</Container>
