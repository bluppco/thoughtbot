---
// LAYOUTS
import Container from "../../layouts/Container.astro"

// ATOMS
import HeadingTwoWhite from "../../atoms/heading/TwoWhite.astro"
import LargeWhiteButton from "../../atoms/button/LargeWhite.astro"

const { data } = Astro.props
---
<section class="py-10 md:py-20 bg-thoughtbot_light_red">
    <Container>
        <div class="md:flex justify-between items-center space-y-4 md:space-y-0">
            <HeadingTwoWhite>{ data.title }</HeadingTwoWhite>
            <LargeWhiteButton href={ data.button_link }>{ data.button_title }</LargeWhiteButton>
        </div>
    </Container>
</section>
