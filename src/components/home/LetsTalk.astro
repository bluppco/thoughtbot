---
// LAYOUTS
import Container from "../../layouts/Container.astro"

// ATOMS
import Button from "../../atoms/Button.astro"

const { data } = Astro.props
---
<section class="py-10 md:py-20 bg-thoughtbot_light_red">
    <Container>
        <div class="md:flex justify-between items-center space-y-4 md:space-y-0">
            <h2 class="font-calibre font-semibold text-3xl md:text-4xl text-white">{ data.title }</h2>
            <Button light={ true } large={ true }>{ data.button_title }</Button>
        </div>
    </Container>
</section>
