---
// ATOMS
import Paragraph from "../../atoms/Paragraph.astro"
import ArrowCTA from "../../atoms/ArrowCTA.astro"
import HeadingFive from "../../atoms/heading/Five.astro"

const {

    title,
    description,
    cta,
    cta_link

} = Astro.props
---
<div class="space-y-6">
    <div class="space-y-4">
        <HeadingFive>{ title }</HeadingFive>
        <Paragraph>{ description }</Paragraph>
    </div>
    <ArrowCTA href={ cta_link }>{ cta }</ArrowCTA>
</div>
