---
// ATOMS
import ArrowCTA from "../atoms/ArrowCTA.astro"

// CONSTANTS
import { CDN_LINK, IMAGE_QUALITY, IMAGE_WIDTH } from "../constants/cdn"

const {

    src,
    alt,
    title,
    description,
    cta

} = Astro.props
---
<div class="space-y-4 rounded overflow-hidden">
    <div class="overflow-hidden">
        <img
            src={ CDN_LINK + src + "?quality=" + IMAGE_QUALITY + "&width=" + IMAGE_WIDTH }
            alt={ alt }
            class="w-full h-full object-cover"
        />
    </div>
    <div class="space-y-4 md:space-y-8">
        <div>
            <span class="text-thoughtbot_slate font-medium text-lg font-calibre">{ title }</span>
            <span> â€” </span>
            <span class="text-thoughtbot_slate text-lg font-calibre">{ description }</span>
        </div>
        <ArrowCTA>{ cta }</ArrowCTA>
    </div>
</div>
