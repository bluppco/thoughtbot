---
const { href, aria_label } = Astro.props
---
<div>
    <a href={ "/" + href } aria-label={ aria_label }>
        <div class="hover:cursor-pointer group space-y-2">
            <p class="md:text-lg text-thoughtbot_light_red underline group-hover:no-underline">
                <slot/>
            </p>
            <div class="w-10 aspect-[4/1] group-hover:ml-4 transition-all duration-500">
                <img
                    src="/icons/long_arrow_right.svg"
                    alt=""
                    class="w-full h-full"
                />
            </div>
        </div>
    </a>
</div>
